@model DatabaseLab.Models.Customer

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>
    <script src="https://kit.fontawesome.com/96ee80c236.js" crossorigin="anonymous"></script>
</head>

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Customer</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
             Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CustomerId)
        </dd>
        <dt class="col-sm-2">
             FirstName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CName)
        </dd>
        <dt class="col-sm-2">
             LastName
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CLastName)
        </dd>
        <dt class="col-sm-2">
             Phone
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CNumber)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CustomerId" />
        <input type="submit" value="Delete" class="btn btn-secondary" onclick="myFunction()" /> |
        <a asp-action="Index" style="color:black; font-family:courier; "><i class="fa-solid fa-circle-left" style="color:black;"></i>Back to List</a>
    </form>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
